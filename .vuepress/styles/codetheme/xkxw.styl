/* 对小代码块颜色设置 */
.content__default {
  code {
    color: #E96910 !important
    background-color: rgb(249 249 249) !important;
  }
  // pre, pre[class*="language-"] {
  //   code {
  //     color #fff!important
  //   }
  // }
}

div[class*="language-"], .line-numbers-mode {
    background-color: #fdfdfd !important;
}
div[class*="language-"].line-numbers-mode::after {
    display: none;
}
div[class*="language-"].line-numbers-mode .line-numbers-wrapper {
    border-right: 1px solid #187d210f;
}
div[class*="language-"].line-numbers-mode .line-numbers-wrapper .line-number {
    color: #838282 !important;
}
.content__default pre, .content__default pre[class*=language-] {
    background-color: #fdfdfd !important;
    line-height: 1.4;
    padding: 1.25rem 1.5rem;
    margin: .85rem 0;
    border-radius: 6px;
    overflow: auto;
    font-size: 15px;
    font-weight: 600;
    border: 1px solid #E7E9E8;
}

.content__default pre code, .content__default pre[class*="language-"] code {
    background-color: #fdfdfd !important;
    color: #1b1f1f;
}

.token.boolean,
.token.function,
.token.number {
    color: #f08d49 !important
}

.token.punctuation {
    color: rgba(21,75,8,0.75) !important
}

.token.namespace {
    color: rgb(24,119,7) !important
}

.token.comment {
    color: #838282 !important
}

.token.class-name,
.token.constant,
.token.symbol,
.token.value,
.token.property {
    color: #8f95da !important
}

.token.string, 
.token.char, 
.token.attr-value, 
.token.regex, 
.token.variable {
    color: #10a48f;
}

.token.atrule,
.token.builtin,
.token.important,
.token.keyword,
.token.selector,
.token.atrule {
    color: #e2777a;
}

.token.tag,
.token.deleted,
.token.namespace {
    color: rgb(24,119,7);
}

.token.operator,
.token.url,
.token.entity {
    color: #67cdcc;
}

.token.attr-name {
    color: #0d66cb;
}